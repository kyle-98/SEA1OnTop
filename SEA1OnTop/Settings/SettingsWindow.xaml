<Window x:Class="SEA1OnTop.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="400"
        Height="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White">

     <Grid Margin="10">
          <Grid.RowDefinitions>
               <RowDefinition Height="*" />
               <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <StackPanel Grid.Row="0" Margin="0,0,0,10">
               <TextBlock Text="Bar Height:"/>
               <TextBox Name="BarHeightTextBox" />

               <TextBlock Text="Background Color:" Margin="0,10,0,0"/>
               <StackPanel Orientation="Horizontal">
                    <TextBox Name="BackgroundColorTextBox" IsReadOnly="True" Width="200"/>
                    <Button Content="Choose Color" Width="100" Margin="10,0,0,0" Click="ChooseColorButton_Click"/>
               </StackPanel>

               <TextBlock Text="Text to display:" Margin="0,10,0,0"/>
               <TextBox Name="DisplayTextBox" />

               <TextBlock Text="Monitor:" Margin="0,10,0,0"/>
               <ComboBox Name="MonitorComboBox" Width="250" Margin="0,5,0,0"/>

               <CheckBox Name="ScrollTextCheckBox" Content="Scroll text" Margin="0,10,0,0"/>
          </StackPanel>

          <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
               <Button Content="Save" Width="80" Margin="5,0" Click="SaveButton_Click"/>
               <Button Content="Close" Width="80" Margin="5,0" Click="CloseButton_Click"/>
          </StackPanel>
     </Grid>
</Window>
