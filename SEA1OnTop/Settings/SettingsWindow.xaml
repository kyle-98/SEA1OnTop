<Window x:Class="SEA1OnTop.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="600"
        Height="550"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White">

     <Grid Margin="10">
          <Grid.RowDefinitions>
               <RowDefinition Height="*" />
               <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>


          <TabControl Grid.Row="0" Margin="0,0,0,10">
               <TabItem Header="Bar Options">
                    <Grid Background="#FFE5E5E5">
                         <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="*"/>
                         </Grid.ColumnDefinitions>
                         <Grid.RowDefinitions>
                              <RowDefinition Height="*"/>
                         </Grid.RowDefinitions>
                         
                         <StackPanel Orientation="Vertical" Margin="20">
                              <TextBlock Text="Bar Height"/>
                              <TextBox Name="BarHeightTextBox" Width="150" Margin="0,5,0,0" HorizontalAlignment="Left"/>

                              <TextBlock Text="Background Color" Margin="0,10,0,0"/>
                              <StackPanel Orientation="Horizontal">
                                   <TextBox Name="BackgroundColorTextBox" IsReadOnly="True" Width="150" Margin="0,5,0,0"/>
                                   <Button Content="Choose Color" Width="100" Margin="10,5,0,0" Click="ChooseColorButton_Click"/>
                              </StackPanel>

                              <TextBlock Text="Monitor" Margin="0,10,0,0"/>
                              <ComboBox Name="MonitorComboBox" Width="250" Margin="0,5,0,0" HorizontalAlignment="Left"/>

                              <CheckBox Name="RGBBackgroundCheckBox" Content="RGB Mode" Margin="0,10,0,0"/>
                         </StackPanel>
                    </Grid>
               </TabItem>
               
               <TabItem Header="Text Options">
                    <Grid Background="#FFE5E5E5">
                         <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="*"/>
                         </Grid.ColumnDefinitions>
                         <Grid.RowDefinitions>
                              <RowDefinition Height="*"/>
                         </Grid.RowDefinitions>

                         <StackPanel Orientation="Vertical" Margin="20">
                              <TextBlock Text="Text to display" Margin="0,10,0,0"/>
                              <TextBox Name="DisplayTextBox" Width="150" HorizontalAlignment="Left"/>

                              <TextBlock Text="Text Color" Margin="0,10,0,0"/>
                              <StackPanel Orientation="Horizontal" Margin="0,5">
                                   <TextBox x:Name="TextColorTextBox"  IsReadOnly="True" Width="150"/>
                                   <Button Content="Pick Color" Width="100" Margin="10,0,0,0" Click="PickTextColor_Click"/>
                              </StackPanel>

                              <TextBlock Text="Font" Margin="0,10,0,0"/>
                              <ComboBox Name="FontComboBox" IsEditable="True" Width="250" Margin="0,5,0,0" HorizontalAlignment="Left"/>

                              <TextBlock Text="Font Size" Margin="0,10,0,0"/>
                              <TextBox Name="FontSizeTextBox" Width="150" Margin="0,5,0,0" HorizontalAlignment="Left"/>

                              <Label Content="Scroll Direction:" Margin="0,10,0,0"/>
                              <ComboBox x:Name="ScrollDirectionComboBox" Width="200" Margin="0,5,0,0" HorizontalAlignment="Left">
                                   <ComboBoxItem Content="Right to Left" Tag="RightToLeft"/>
                                   <ComboBoxItem Content="Left to Right" Tag="LeftToRight"/>
                              </ComboBox>

                              <TextBlock Text="Scroll Speed" Margin="0,10,0,0"/>
                              <TextBox Name="ScrollSpeedTextBox" Width="150" Margin="0,5,0,0" HorizontalAlignment="Left"/>

                              <CheckBox Name="ScrollTextCheckBox" Content="Scroll text" Margin="0,10,0,0"/>
                         </StackPanel>

                    </Grid>
               </TabItem>
               
               
          </TabControl>



          <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
               <Button Content="Save" Width="80" Margin="5,0" Click="SaveButton_Click"/>
               <Button Content="Close" Width="80" Margin="5,0" Click="CloseButton_Click"/>
               <Button Content="Reset Settings" Width="80" Margin="5,0" Click="ResetButton_Click"/>
          </StackPanel>

